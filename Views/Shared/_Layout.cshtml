<!DOCTYPE html>
<html>
    <head>
        <meta charset="utf-8">
        <link rel='stylesheet' href='https://maxcdn.bootstrapcdn.com/bootstrap/3.2.0/css/bootstrap.min.css' type="text/css">
        <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/materialize/0.98.0/css/materialize.min.css" type="text/css">
        <link rel='stylesheet' href="/Content/css/styles.css" type="text/css">
        <script src="https://code.jquery.com/jquery-3.1.1.js" integrity="sha256-16cdPddA6VdVInumRGo6IbivbERE8p7CQR3HzTBuELA=" crossorigin="anonymous"></script>
        <script src="https://cdnjs.cloudflare.com/ajax/libs/materialize/0.98.0/js/materialize.min.js"></script>
        <script src="/Content/js/scripts.js" type="text/javascript"></script>
        <meta charset="utf-8">
        <title>Hair Salon</title>
    </head>
    <body>
        <nav>
            <div class="nav-wrapper indigo lighten-2">
                <a href="#" class="brand-logo">Royal Cuts Home</a>
                <ul id="mobile-nav" class="right">
                    <li><a href="/stylists">Stylist View</a></li>
                    <li><a href="/clients">Client View</a></li>
                </ul>
            </div>
        </nav>
        <div class="custom-sidebar indigo lighten-2">
            <div class="nav-column">
                <div class="stylists-button">
                    <div class="card indigo lighten-4">
                        <hr />
                        <ul class="collapsible" data-collapsible="accordion">
                            <li>
                                <div class="center-align indigo lighten-2 collapsible-header">
                                    <strong>Add a Stylist</strong>
                                </div>
                                <div class="collapsible-body white">
                                    <div class="stylist-form">
                                        <form class="" action="/stylists" method="post">
                                            <input type="text" id="stylist-name" name="stylist-name" placeholder="New stylist name" value="" required>
                                            <button id="submit-stylist" type="submit" name="create-stylist" class="btn blue">Create Stylist</button>
                                        </form>
                                    </div>
                                </div>
                            </li>
                        </ul>
                        <ul class="collapsible" data-collapsible="accordion">
                            <li>
                                <div class="center-align indigo lighten-2 collapsible-header">
                                    <strong>Add a Client</strong>
                                </div>
                                <div class="collapsible-body white">
                                    <div class="client-form">
                                        <form class="" action="/clients" method="post">
                                            <input class="" type="text" name="new-client-name" placeholder="New client name">
                                            <input class="" type="text" name="new-client-haircolor" placeholder="New client haircolor">
                                            <input type="text" name="new-stylist-name" placeholder="Name of stylist">
                                            <button class="btn" type="submit" name="button">Create Client</button>
                                        </form>
                                    </div>
                                </div>
                            </li>
                        </ul>
                        <hr />
                    </div>
                </div>
            </div>
        </div>
        <div class="custom-content">
            @RenderBody()
        </div>

    </body>
</html>
